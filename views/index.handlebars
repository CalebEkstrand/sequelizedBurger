<h1>Burgers!</h1>
<h2>Burgers that are not eaten!</h2>

<ul>
  {{#each burger}}
    {{#unless eaten}}
     <li>{{name}} <button class="eat" value="{{id}}">Devour</button></li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are eaten!</h2>

<ul>
  {{#each burger}}
    {{#if eaten}}
    <li>{{name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form"action="/api/burger"method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  

  <button type="submit">Add Burger</button>
</form>
